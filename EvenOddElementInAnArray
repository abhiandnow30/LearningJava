package Arrays;
import java.util.Arrays;
public class EvenOddInAnArray {
    public static void main(String[] args) {
        int[] arr=new int[]{22,34,4,53,65,76,58,19};
        int Numberofevenelements = 0;
        int Numberofoddelements=0;
        for(int i=0;i< arr.length;i++){
            if(arr[i]%2==0){
                Numberofevenelements=Numberofevenelements+1;
            }
            else{
                Numberofoddelements=Numberofoddelements+1;
            }
        }
        System.out.println(Numberofevenelements);
        System.out.println(Numberofoddelements);


    }
}
